{
  "displayName": "Spender Cost Monitor Dashboard",
  "mosaicLayout": {
    "columns": 12,
    "tiles": [
      {
        "width": 12,
        "height": 3,
        "xPos": 0,
        "yPos": 0,
        "widget": {
          "title": "Total Cost (Last 7 Days)",
          "scorecard": {
            "timeSeriesQuery": {
              "timeSeriesFilter": {
                "filter": "metric.type=\"custom.googleapis.com/spender/total_cost\" resource.type=\"generic_node\"",
                "aggregation": {
                  "alignmentPeriod": "604800s",
                  "perSeriesAligner": "ALIGN_MAX",
                  "crossSeriesReducer": "REDUCE_SUM"
                }
              },
              "unitOverride": "USD"
            },
            "sparkChartView": {
              "sparkChartType": "SPARK_LINE"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 0,
        "yPos": 3,
        "widget": {
          "title": "Total Cost by Run",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"custom.googleapis.com/spender/total_cost\" resource.type=\"generic_node\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_NONE",
                      "groupByFields": [
                        "metric.labels.run_id"
                      ]
                    }
                  },
                  "unitOverride": "USD"
                },
                "plotType": "LINE",
                "minAlignmentPeriod": "60s"
              }
            ],
            "timeshiftDuration": "0s",
            "yAxis": {
              "label": "USD",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 3,
        "widget": {
          "title": "Active Runs",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"custom.googleapis.com/spender/total_cost\" resource.type=\"generic_node\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_COUNT",
                      "groupByFields": [
                        "metric.labels.run_id"
                      ]
                    }
                  }
                },
                "plotType": "STACKED_BAR",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      },
      {
        "width": 12,
        "height": 4,
        "xPos": 0,
        "yPos": 7,
        "widget": {
          "title": "Instance CPU Usage by Run",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"compute.googleapis.com/instance/cpu/utilization\" resource.type=\"gce_instance\" metadata.user_labels.managed_by=\"terraform\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_NONE",
                      "groupByFields": [
                        "resource.labels.instance_id"
                      ]
                    }
                  }
                },
                "plotType": "LINE",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 0,
        "yPos": 11,
        "widget": {
          "title": "Instance Count",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"compute.googleapis.com/instance/cpu/utilization\" resource.type=\"gce_instance\" metadata.user_labels.managed_by=\"terraform\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_COUNT"
                    }
                  }
                },
                "plotType": "LINE",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      },
      {
        "width": 6,
        "height": 4,
        "xPos": 6,
        "yPos": 11,
        "widget": {
          "title": "Disk Usage",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"compute.googleapis.com/instance/disk/read_bytes_count\" resource.type=\"gce_instance\" metadata.user_labels.managed_by=\"terraform\"",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_RATE",
                      "crossSeriesReducer": "REDUCE_NONE",
                      "groupByFields": [
                        "resource.labels.instance_id"
                      ]
                    }
                  }
                },
                "plotType": "LINE",
                "minAlignmentPeriod": "60s"
              }
            ]
          }
        }
      }
    ]
  },
  "etag": "30afdfd1616fba883656e48b7582f52f"
}
